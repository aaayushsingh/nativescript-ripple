{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "noLib": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "files": ["ripple.d.ts","ripple.android.ts", "ripple.ios.ts", "ripple-common.ts"],
  "exclude": ["node_modules", "platforms"],
  "compileOnSave": true
}
